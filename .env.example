#################################
# App
#################################
APP_NAME=Aparca
APP_ENV=local              # 游녤 en prod: "production"
APP_KEY=                   # 游녤 se genera con: php artisan key:generate
APP_DEBUG=true             # 游녤 en prod: "false"
APP_URL=http://localhost   # 游녤 en prod: tu dominio https://aparca.tu-dominio.com

# Idiomas
APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_ES

#################################
# Logging
#################################
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug            # 游녤 en prod: "warning" o "error"
LOG_DEPRECATIONS_CHANNEL=null

#################################
# Database
#################################
DB_CONNECTION=mysql
DB_HOST=127.0.0.1          # 游녤 en Docker: nombre del servicio, ej. "mariadb"
DB_PORT=3306
DB_DATABASE=aparca
DB_USERNAME=aparca
DB_PASSWORD=               # 游녤 en prod: usa una contrase침a segura

#################################
# Cache / Queue / Session
#################################
CACHE_DRIVER=file          # 游녤 en prod: "redis" o "memcached"
QUEUE_CONNECTION=sync      # 游녤 en prod: "database" o "redis"
SESSION_DRIVER=file        # 游녤 en prod: "database" o "redis"
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_DOMAIN=null         # 游녤 en prod: dominio principal, ej. ".aparca.com"

#################################
# Redis (opcional)
#################################
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null         # 游녤 en prod: usa contrase침a segura si Redis est치 expuesto
REDIS_PORT=6379

#################################
# CORS (para Angular / frontends)
#################################
CORS_ALLOWED_ORIGINS=http://localhost:4200
# 游녤 en prod: pon todos los dominios front permitidos separados por comas
# ej: https://app.aparca.com,https://admin.aparca.com

#################################
# JWT (php-open-source-saver/jwt-auth)
#################################
JWT_SECRET=                # 游녤 se genera con: php artisan jwt:secret
JWT_TTL=1440               # 1 d칤a en minutos
JWT_REFRESH_TTL=129600      # 90 d칤as en minutos

#################################
# Mail
#################################
MAIL_MAILER=log            # 游녤 en prod: "smtp" o el driver que uses
MAIL_HOST=127.0.0.1        # 游녤 en prod: host SMTP
MAIL_PORT=2525             # 游녤 en prod: puerto SMTP (587 / 465 t칤picamente)
MAIL_USERNAME=null         # 游녤 en prod: usuario SMTP
MAIL_PASSWORD=null         # 游녤 en prod: contrase침a SMTP
MAIL_ENCRYPTION=null       # 游녤 en prod: tls/ssl
MAIL_FROM_ADDRESS="no-reply@aparca.local"   # 游녤 en prod: correo real
MAIL_FROM_NAME="${APP_NAME}"

#################################
# Filesystem
#################################
FILESYSTEM_DISK=local      # 游녤 en prod: "s3", "gcs", etc.

#################################
# Otros
#################################
VITE_APP_NAME="${APP_NAME}"
